<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/content_standalone"
    android:orientation="vertical"
    android:background="@android:color/holo_purple"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="extopoint.suganya.youtubeplayer.StandaloneActivity"
    tools:showIn="@layout/activity_standalone">

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/btnplayvideo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="88dp"
        android:background="@android:color/holo_red_dark" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/btnplayvideo"
        android:text="Playvideo"
        android:textStyle="bold|italic"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnnext"
        android:text="Next"
        android:textStyle="bold|italic"
        android:layout_centerInParent="true"
        android:layout_below="@+id/btnplayvideo"
        android:layout_marginTop="35dp"

        />


</RelativeLayout>
